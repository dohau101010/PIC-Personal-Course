#include <tv_kit_vdk_pic_all.c>
usi8 mp, sp, gh, chuc, donvi;
int1 status;
void hienthigioihan()
{
  
   gh=chuc*10+donvi;
   sp=get_timer0();
   if(sp>gh) 
   {
      set_timer0(1);
      sp=1;
   }
   lcd_goto_xy(2,0);
   printf(lcd_data, "GH: %02u  SP: %02u", gh, sp);
}

void hienthi7doan()
{
   if(status==0)
   {
    md4l7d_giaima_2so_vitri_vn(sp,1,0);
    dl_4l7d[1]=dl_4l7d[1]-128;
    dl_4l7d[2]=0xff-1-32-64-4-48;
    dl_4l7d[3]=0xff-1-2-16-32-64;
    xuat_4led_7doan_4so();
   } else
   {
    md4l7d_giaima_2so_vitri_vn(sp,3,0);
    dl_4l7d[0]=0xff-1-32-64-4-48;
    dl_4l7d[1]=0xff-1-2-16-32-64-128;
    xuat_4led_7doan_4so();
   }
}
void nutnhan()
{
   mp=key_4x4_dw();
   if(mp==15) 
   {
    status=!status;
    hienthi7doan();
   }
   if(mp<10)
   {
      chuc=donvi;
      donvi=mp;
      hienthigioihan();
   }
   
}
void main()
{
   set_up_port();
   setup_timer_0(t0_ext_l_to_h|t0_div_1);
   set_timer0(0);
   lcd_setup();
   lcd_khoi_tao_cgram_so_to();
   
   while(true)
   {
      nutnhan();
      hienthigioihan();
      hienthi7doan();
   }
}
