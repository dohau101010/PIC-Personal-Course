#include <tv_kit_vdk_pic_all.c>
unsigned int8 mp;
signed int8 i;
 
void main() 
{ 
   set_up_port(); 
   dl_4l7d[3]=0x7f; 
   xuat_4led_7doan_4so();
   while(true) 
   { 
      mp = key_4x4_dw();
      if(mp!=0xff) 
      { 
         for(i=0;i<3;i++) 
            dl_4l7d[i] = dl_4l7d[i+1];
         dl_4l7d[3] = ma7doan[mp]; 
         xuat_4led_7doan_4so(); 
         delay_ms(100);
     }
     if(mp == 0x0c)
     {
         mp = 0xff;
         dl_4l7d[3] = ma7doan[mp]; 
         xuat_4led_7doan_4so();
     }
   }
}
